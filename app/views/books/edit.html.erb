<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <% if @book.errors.count == 1 %>
    <%= @book.errors.count %> error prohibited this book from being saved:
  <% else %>
    <%= @book.errors.count %> errors prohibited this book from being saved:
  <% end %>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url: book_path(@book.id),
    method: :patch do |f| %>
  <div class="post-box">
    <label>Title</label>
    <%= f.text_field :title %>
  </div>
  <div class="post-box">
    <label>Body</label>
    <%= f.text_area :body %>
  </div>
  <div class="post-box">
    <%= f.submit "Update Book" %>
  </div>
<% end %>

